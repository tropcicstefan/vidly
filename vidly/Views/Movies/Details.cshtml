@model vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>

    <li>Released date: @Model.ReleaseDateTime.ToShortDateString()</li>
    <li>Added date: @Model.AddedDateTime.ToShortDateString()</li>
    <li>No. in Stock: @Model.NoInStock</li>


</ul>

